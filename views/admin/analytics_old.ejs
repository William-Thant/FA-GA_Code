<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Payment Analytics Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
  <link rel="stylesheet" href="/theme.css">
  <style>
    body { background-color: #f8f9fa; }
    .page-header { 
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
      color: white; 
      padding: 40px 0; 
      margin-bottom: 40px; 
    }
    .stat-card {
      background: white;
      border-radius: 15px;
      padding: 25px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.08);
      transition: all 0.3s ease;
      height: 100%;
    }
    .stat-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 25px rgba(0,0,0,0.12);
    }
    .stat-icon {
      width: 60px;
      height: 60px;
      border-radius: 15px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.8rem;
      margin-bottom: 15px;
    }
    .stat-value {
      font-size: 2rem;
      font-weight: 700;
      margin: 10px 0;
    }
    .stat-label {
      color: #6c757d;
      font-size: 0.95rem;
      font-weight: 500;
    }
    .chart-container {
      background: white;
      border-radius: 15px;
      padding: 30px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.08);
      margin-bottom: 30px;
      position: relative;
      height: 400px;
    }
    .chart-title {
      font-size: 1.3rem;
      font-weight: 700;
      margin-bottom: 25px;
      color: #2d3436;
    }
    .table-container {
      background: white;
      border-radius: 15px;
      padding: 30px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.08);
      margin-bottom: 30px;
    }
    .payment-badge {
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 600;
    }
    .filter-section {
      background: white;
      border-radius: 15px;
      padding: 20px;
      margin-bottom: 30px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    }
  </style>
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="page-header">
    <div class="container">
      <h1><i class="fas fa-chart-line me-3"></i>Payment Analytics Dashboard</h1>
      <p class="mb-0">Real-time insights into payment performance and revenue</p>
    </div>
  </div>

  <div class="container pb-5">
    
    <!-- Filter Section -->
    <div class="filter-section">
      <form method="GET" action="/admin/analytics" class="row g-3 align-items-end">
        <div class="col-md-4">
          <label class="form-label"><i class="fas fa-calendar me-2"></i>Time Period</label>
          <select name="period" class="form-select" onchange="this.form.submit()">
            <option value="7" <%= period === '7' ? 'selected' : '' %>>Last 7 Days</option>
            <option value="30" <%= period === '30' ? 'selected' : '' %>>Last 30 Days</option>
            <option value="90" <%= period === '90' ? 'selected' : '' %>>Last 90 Days</option>
            <option value="365" <%= period === '365' ? 'selected' : '' %>>Last Year</option>
          </select>
        </div>
      </form>
    </div>

    <!-- Key Metrics -->
    <div class="row mb-4">
      <div class="col-lg-3 col-md-6 mb-4">
        <div class="stat-card">
          <div class="stat-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
            <i class="fas fa-dollar-sign"></i>
          </div>
          <div class="stat-label">Total Revenue</div>
          <div class="stat-value text-success">$<%= stats.totalRevenue.toFixed(2) %></div>
          <small class="text-muted">Last <%= period %> days</small>
        </div>
      </div>
      
      <div class="col-lg-3 col-md-6 mb-4">
        <div class="stat-card">
          <div class="stat-icon" style="background: linear-gradient(135deg, #00b894 0%, #00cec9 100%); color: white;">
            <i class="fas fa-shopping-cart"></i>
          </div>
          <div class="stat-label">Total Orders</div>
          <div class="stat-value text-primary"><%= stats.totalOrders %></div>
          <small class="text-muted">Completed transactions</small>
        </div>
      </div>
      
      <div class="col-lg-3 col-md-6 mb-4">
        <div class="stat-card">
          <div class="stat-icon" style="background: linear-gradient(135deg, #fdcb6e 0%, #e17055 100%); color: white;">
            <i class="fas fa-chart-bar"></i>
          </div>
          <div class="stat-label">Average Order Value</div>
          <div class="stat-value" style="color: #e17055;">$<%= stats.avgOrderValue.toFixed(2) %></div>
          <small class="text-muted">Per transaction</small>
        </div>
      </div>
      
      <div class="col-lg-3 col-md-6 mb-4">
        <div class="stat-card">
          <div class="stat-icon" style="background: linear-gradient(135deg, #6c5ce7 0%, #a29bfe 100%); color: white;">
            <i class="fas fa-chart-pie"></i>
          </div>
          <div class="stat-label">Payment Methods</div>
          <div class="stat-value" style="color: #6c5ce7;"><%= paymentMethods.length %></div>
          <small class="text-muted">Active methods</small>
        </div>
      </div>
    </div>

    <!-- Charts Row -->
    <div class="row mb-4">
      <!-- Payment Methods Chart -->
      <div class="col-lg-12 mb-4">
        <div class="chart-container">
          <h5 class="chart-title"><i class="fas fa-credit-card me-2"></i>Payment Methods Distribution</h5>
          <canvas id="paymentMethodsChart"></canvas>
        </div>
      </div>
    </div>

    <!-- Tables Row -->
    <div class="row">
      <!-- Top Customers -->
      <div class="col-lg-6 mb-4">
        <div class="table-container">
          <h5 class="chart-title"><i class="fas fa-users me-2"></i>Top Customers by Spending</h5>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Rank</th>
                  <th>Customer</th>
                  <th>Orders</th>
                  <th>Total Spent</th>
                </tr>
              </thead>
              <tbody>
                <% topCustomers.forEach((customer, index) => { %>
                <tr>
                  <td><strong>#<%= index + 1 %></strong></td>
                  <td>
                    <i class="fas fa-user-circle me-2 text-primary"></i>
                    <%= customer.name %>
                  </td>
                  <td><span class="badge bg-info"><%= customer.orderCount %> orders</span></td>
                  <td><strong class="text-success">$<%= customer.totalSpent.toFixed(2) %></strong></td>
                </tr>
                <% }); %>
                <% if (topCustomers.length === 0) { %>
                <tr>
                  <td colspan="4" class="text-center text-muted">No customer data available</td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Popular Discount Codes -->
      <div class="col-lg-6 mb-4">
        <div class="table-container">
          <h5 class="chart-title"><i class="fas fa-tag me-2"></i>Popular Discount Codes</h5>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Code</th>
                  <th>Type</th>
                  <th>Usage</th>
                </tr>
              </thead>
              <tbody>
                <% discountCodes.forEach((code) => { %>
                <tr>
                  <td><span class="badge bg-primary"><%= code.code %></span></td>
                  <td>
                    <% if (code.discountType === 'percentage') { %>
                      <span class="payment-badge" style="background: #e3f2fd; color: #1976d2;">
                        <%= code.discountValue %>% OFF
                      </span>
                    <% } else { %>
                      <span class="payment-badge" style="background: #f3e5f5; color: #7b1fa2;">
                        $<%= code.discountValue %> OFF
                      </span>
                    <% } %>
                  </td>
                  <td><%= code.timesUsed %> uses</td>
                </tr>
                <% }); %>
                <% if (discountCodes.length === 0) { %>
                <tr>
                  <td colspan="4" class="text-center text-muted">No discount codes used</td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Payment Provider Breakdown -->
    <div class="table-container">
      <h5 class="chart-title"><i class="fas fa-credit-card me-2"></i>Payment Provider Performance</h5>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Payment Method</th>
              <th>Transactions</th>
              <th>Total Amount</th>
              <th>Average Transaction</th>
            </tr>
          </thead>
          <tbody>
            <% paymentMethods.forEach((method) => { %>
            <tr>
              <td>
                <% if (method.provider === 'Wallet') { %>
                  <i class="fas fa-wallet me-2" style="color: #667eea;"></i>
                <% } else if (method.provider === 'NETS') { %>
                  <i class="fas fa-qrcode me-2" style="color: #764ba2;"></i>
                <% } else if (method.provider === 'PayPal') { %>
                  <i class="fab fa-paypal me-2" style="color: #0070ba;"></i>
                <% } else if (method.provider === 'Stripe') { %>
                  <i class="fab fa-stripe me-2" style="color: #635bff;"></i>
                <% } else if (method.provider === 'Gift Card') { %>
                  <i class="fas fa-gift me-2" style="color: #ff6348;"></i>
                <% } else { %>
                  <i class="fas fa-credit-card me-2"></i>
                <% } %>
                <strong><%= method.provider %></strong>
              </td>
              <td><%= method.count %></td>
              <td><strong class="text-success">$<%= method.totalAmount.toFixed(2) %></strong></td>
              <td>$<%= method.avgAmount.toFixed(2) %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

  </div>

  <script>
    // Payment Methods Pie Chart
    const paymentCtx = document.getElementById('paymentMethodsChart').getContext('2d');
    new Chart(paymentCtx, {
      type: 'doughnut',
      data: {
        labels: <%- JSON.stringify(paymentMethodData.labels) %>,
        datasets: [{
          data: <%- JSON.stringify(paymentMethodData.values) %>,
          backgroundColor: [
            'rgba(102, 126, 234, 0.8)',
            'rgba(118, 75, 162, 0.8)',
            'rgba(0, 112, 186, 0.8)',
            'rgba(99, 91, 255, 0.8)',
            'rgba(255, 99, 72, 0.8)'
          ],
          borderWidth: 2,
          borderColor: '#fff'
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: { position: 'bottom' },
          tooltip: {
            callbacks: {
              label: function(context) {
                const total = context.dataset.data.reduce((a, b) => a + b, 0);
                const percentage = ((context.parsed / total) * 100).toFixed(1);
                return context.label + ': ' + context.parsed + ' (' + percentage + '%)';
              }
            }
          }
        }
      }
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

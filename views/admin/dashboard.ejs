<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Admin Control Center - Isaac's Cardealership</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    body { 
      background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
      min-height: 100vh;
      color: #ffffff;
    }
    .page-header {
      background: linear-gradient(135deg, #ff3333 0%, #000000 50%, #ff3333 100%);
      color: white;
      padding: 50px 0;
      margin-bottom: 40px;
      border-bottom: 4px solid #ffd700;
      box-shadow: 0 15px 50px rgba(255, 51, 51, 0.4);
      position: relative;
      overflow: hidden;
    }
    .page-header::before {
      content: '';
      position: absolute;
      top: 0;
      left: -50%;
      width: 200%;
      height: 100%;
      background: repeating-linear-gradient(
        90deg,
        transparent,
        transparent 40px,
        rgba(255, 215, 0, 0.1) 40px,
        rgba(255, 215, 0, 0.1) 50px
      );
      animation: racing-stripes 20s linear infinite;
    }
    @keyframes racing-stripes {
      0% { transform: translateX(0); }
      100% { transform: translateX(50px); }
    }
    .page-header h1 {
      font-weight: 900;
      text-transform: uppercase;
      letter-spacing: 4px;
      text-shadow: 0 0 30px rgba(255, 215, 0, 0.8);
      position: relative;
      z-index: 1;
    }
    .page-header p {
      color: #ffd700;
      letter-spacing: 2px;
      font-weight: 600;
      position: relative;
      z-index: 1;
    }
    .stats-card {
      background: linear-gradient(135deg, #1a1a1a 0%, #0a0a0a 100%);
      border-left: 5px solid;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.6);
      padding: 25px;
      height: 100%;
      transition: all 0.3s;
      position: relative;
      overflow: hidden;
    }
    .stats-card::before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      width: 100px;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.03));
    }
    .stats-card:hover {
      transform: translateY(-8px) scale(1.02);
      box-shadow: 0 15px 40px rgba(255, 51, 51, 0.4);
    }
    .stats-number {
      font-size: 3rem;
      font-weight: 900;
      font-family: 'Courier New', monospace;
      text-shadow: 0 0 20px currentColor;
    }
    .stats-label {
      color: #a8a8a8;
      font-size: 0.85rem;
      text-transform: uppercase;
      letter-spacing: 1.5px;
      font-weight: 700;
    }
    .stats-icon {
      font-size: 2.5rem;
      opacity: 0.3;
      position: absolute;
      right: 20px;
      bottom: 20px;
    }
    .action-card {
      background: linear-gradient(135deg, #1a1a1a 0%, #0a0a0a 100%);
      border: 2px solid #333;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.6);
      transition: all 0.3s;
    }
    .action-card:hover {
      border-color: #ff3333;
      box-shadow: 0 15px 40px rgba(255, 51, 51, 0.3);
    }
    .action-card h5 {
      color: #ff3333;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 2px;
      border-bottom: 2px solid #ff3333;
      padding-bottom: 10px;
    }
    .btn-racing {
      background: linear-gradient(135deg, #ff3333 0%, #cc0000 100%);
      border: none;
      color: white;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
      padding: 12px 25px;
      border-radius: 10px;
      transition: all 0.3s;
    }
    .btn-racing:hover {
      background: linear-gradient(135deg, #cc0000 0%, #ff3333 100%);
      transform: scale(1.05);
      box-shadow: 0 8px 25px rgba(255, 51, 51, 0.5);
      color: white;
    }
    .btn-gold {
      background: linear-gradient(135deg, #ffd700 0%, #ccaa00 100%);
      border: none;
      color: #0a0a0a;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
      padding: 12px 25px;
      border-radius: 10px;
      transition: all 0.3s;
    }
    .btn-gold:hover {
      background: linear-gradient(135deg, #ccaa00 0%, #ffd700 100%);
      transform: scale(1.05);
      box-shadow: 0 8px 25px rgba(255, 215, 0, 0.5);
      color: #0a0a0a;
    }
    .btn-blue {
      background: linear-gradient(135deg, #00d4ff 0%, #0099cc 100%);
      border: none;
      color: #0a0a0a;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
      padding: 12px 25px;
      border-radius: 10px;
      transition: all 0.3s;
    }
    .btn-blue:hover {
      background: linear-gradient(135deg, #0099cc 0%, #00d4ff 100%);
      transform: scale(1.05);
      box-shadow: 0 8px 25px rgba(0, 212, 255, 0.5);
      color: #0a0a0a;
    }
    .low-stock-badge {
      background: linear-gradient(135deg, #ff3333 0%, #cc0000 100%);
      color: white;
      padding: 5px 15px;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 700;
      box-shadow: 0 4px 15px rgba(255, 51, 51, 0.4);
    }
    .table {
      color: #ffffff;
    }
    .table-dark {
      --bs-table-bg: #1a1a1a;
      --bs-table-striped-bg: #0f0f0f;
      --bs-table-hover-bg: rgba(255, 51, 51, 0.1);
      border-color: #333;
    }
    .table-dark thead th {
      background: linear-gradient(135deg, #ff3333 0%, #cc0000 100%);
      color: white;
      border: none;
      text-transform: uppercase;
      letter-spacing: 1px;
      font-size: 0.85rem;
      font-weight: 700;
    }
    .badge {
      font-weight: 700;
      padding: 8px 15px;
      border-radius: 8px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    .alert {
      border-radius: 15px;
      border: 2px solid;
      font-weight: 600;
    }
    .alert-danger {
      background: rgba(255, 51, 51, 0.2);
      border-color: #ff3333;
      color: #ffffff;
    }
    .alert-success {
      background: rgba(0, 212, 255, 0.2);
      border-color: #00d4ff;
      color: #ffffff;
    }
    .btn-close {
      filter: invert(1);
    }
  </style>
</head>
<body>
<%- include('../partials/navbar') %>

<div class="page-header">
  <div class="container">
    <h1><i class="fas fa-gauge-high"></i> üèÅ ADMIN CONTROL CENTER</h1>
    <p class="mb-0">Isaac's Cardealership Management Dashboard</p>
  </div>
</div>

<main class="container pb-5">
  <!-- Flash Messages -->
  <% if (typeof messages !== 'undefined' && messages) { %>
    <% if (messages.error && messages.error.length) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> <%= messages.error.join ? messages.error.join(', ') : messages.error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <% if (messages.success && messages.success.length) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> <%= messages.success.join ? messages.success.join(', ') : messages.success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
  <% } %>

  <!-- Statistics Cards -->
  <div class="row mb-4">
    <div class="col-lg-4 mb-3">
      <div class="stats-card" style="border-left-color: #ff3333;">
        <div>
          <div class="stats-number" style="color: #ff3333;"><%= productStats.totalProducts %></div>
          <div class="stats-label">Total Vehicles</div>
          <i class="fas fa-car stats-icon" style="color: #ff3333;"></i>
        </div>
      </div>
    </div>
    <div class="col-lg-4 mb-3">
      <div class="stats-card" style="border-left-color: #00d4ff;">
        <div>
          <div class="stats-number" style="color: #00d4ff;"><%= users.length %></div>
          <div class="stats-label">Registered Users</div>
          <i class="fas fa-users stats-icon" style="color: #00d4ff;"></i>
        </div>
      </div>
    </div>
    <div class="col-lg-4 mb-3">
      <div class="stats-card" style="border-left-color: #a855f7;">
        <div>
          <div class="stats-number" style="color: #a855f7;"><%= users.filter(u => u.role === 'admin').length %></div>
          <div class="stats-label">Admin Access</div>
          <i class="fas fa-user-shield stats-icon" style="color: #a855f7;"></i>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="action-card p-4">
        <h5 class="mb-3"><i class="fas fa-bolt"></i> Quick Actions</h5>
        <a href="/addProduct" class="btn btn-racing me-2 mb-2"><i class="fas fa-plus-circle"></i> Add Vehicle</a>
        <a href="/inventory" class="btn btn-gold me-2 mb-2"><i class="fas fa-warehouse"></i> Manage Inventory</a>
        <a href="/admin/sellers" class="btn btn-gold me-2 mb-2"><i class="fas fa-users-cog"></i> Manage Sellers</a>
        <a href="/admin/discount-codes" class="btn btn-blue me-2 mb-2"><i class="fas fa-tags"></i> Discount Codes</a>
        <a href="/shop" class="btn btn-blue mb-2"><i class="fas fa-shop"></i> View Showroom</a>
      </div>
    </div>
  </div>

  <!-- User Management -->
  <div class="row">
    <div class="col-12">
      <div class="action-card p-4">
        <h5 class="mb-4"><i class="fas fa-users-gear"></i> User Management (<%= users.length %>)</h5>
        <% if (users.length === 0) { %>
          <p class="text-muted text-center py-4"><i class="fas fa-inbox fa-2x d-block mb-2"></i>No registered users</p>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-dark table-striped table-hover align-middle">
              <thead>
                <tr>
                  <th>Username</th>
                  <th>Email Address</th>
                  <th>Access Level</th>
                  <th>Registration Date</th>
                  <th class="text-center">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(u => { %>
                  <tr>
                    <td><strong style="color: #ffffff;"><%= u.username %></strong></td>
                    <td><span style="color: #a8a8a8;"><%= u.email %></span></td>
                    <td>
                      <span class="badge <%= u.role === 'admin' ? 'bg-danger' : 'bg-primary' %>">
                        <i class="fas fa-<%= u.role === 'admin' ? 'shield-halved' : 'user' %>"></i>
                        <%= u.role === 'admin' ? 'ADMINISTRATOR' : 'CUSTOMER' %>
                      </span>
                      <% if (u.is_seller) { %>
                        <span class="badge ms-1 <%= u.seller_status === 'approved' ? 'bg-success' : (u.seller_status === 'pending' ? 'bg-warning' : (u.seller_status === 'suspended' ? 'bg-secondary' : 'bg-danger')) %>">
                          <i class="fas fa-<%= u.seller_status === 'approved' ? 'store' : (u.seller_status === 'pending' ? 'clock' : (u.seller_status === 'suspended' ? 'ban' : 'times')) %>"></i>
                          SELLER: <%= u.seller_status ? u.seller_status.toUpperCase() : 'N/A' %>
                        </span>
                      <% } %>
                    </td>
                    <td>
                      <span style="color: #a8a8a8;">
                        <% if (u.created_at) { %>
                          <%= new Date(u.created_at).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                        <% } else { %>
                          N/A
                        <% } %>
                      </span>
                    </td>
                    <td class="text-center">
                      <% if (u.id !== user.userId) { %>
                        <div class="btn-group" role="group">
                          <form action="/admin/toggle-role" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to change this user\'s role?');">
                            <input type="hidden" name="userId" value="<%= u.id %>">
                            <input type="hidden" name="currentRole" value="<%= u.role %>">
                            <button type="submit" class="btn btn-sm <%= u.role === 'admin' ? 'btn-warning' : 'btn-success' %>">
                              <i class="fas fa-<%= u.role === 'admin' ? 'user-minus' : 'user-plus' %>"></i>
                              <%= u.role === 'admin' ? 'Revoke Admin' : 'Grant Admin' %>
                            </button>
                          </form>
                          <form action="/admin/delete-user" method="POST" style="display: inline; margin-left: 8px;" onsubmit="return confirm('Are you sure you want to permanently delete this user? This action cannot be undone!');">
                            <input type="hidden" name="userId" value="<%= u.id %>">
                            <button type="submit" class="btn btn-sm btn-danger">
                              <i class="fas fa-trash-alt"></i> Delete
                            </button>
                          </form>
                        </div>
                      <% } else { %>
                        <span class="badge" style="background: linear-gradient(135deg, #ffd700 0%, #ccaa00 100%); color: #0a0a0a;"><i class="fas fa-user-check"></i> Current User</span>
                      <% } %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

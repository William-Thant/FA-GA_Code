<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Fines Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
</head>
<body>
<%- include('../partials/navbar') %>

  <main class="container my-5">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-8">
        <div class="card shadow-sm">
          <div class="card-body">
            <h3 class="card-title mb-4">Fines Cart</h3>

            <% if (!cartItems || cartItems.length === 0) { %>
              <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> Your cart is empty.
              </div>
              <a href="/fines" class="btn btn-primary">View Fines</a>
            <% } else { %>
              <div class="table-responsive">
                <table class="table table-striped align-middle">
                  <thead>
                    <tr>
                      <th>Fine Type</th>
                      <th>Description</th>
                      <th class="text-end">Amount</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% 
                      let total = 0;
                      cartItems.forEach(item => { 
                        total += Number(item.amount || 0);
                    %>
                      <tr>
                        <td><%= item.typeName || '-' %></td>
                        <td><%= item.description || '-' %></td>
                        <td class="text-end">$<%= Number(item.amount || 0).toFixed(2) %></td>
                        <td class="text-end">
                          <form action="/fines/cart/remove" method="POST" style="display:inline;">
                            <input type="hidden" name="fineId" value="<%= item.fineId %>">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                          </form>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                  <tfoot>
                    <tr>
                      <td colspan="2" class="text-end"><strong>Total:</strong></td>
                      <td class="text-end"><strong>$<%= total.toFixed(2) %></strong></td>
                      <td></td>
                    </tr>
                  </tfoot>
                </table>
              </div>

              <div class="d-flex gap-2 mt-4">
                <form action="/fines/cart/clear" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Clear all items from cart?')">Clear Cart</button>
                </form>
                <form action="/fines/pay" method="POST" style="display:inline;">
                  <% cartItems.forEach(item => { %>
                    <input type="hidden" name="fineIds[]" value="<%= item.fineId %>">
                  <% }) %>
                  <button type="submit" class="btn btn-success">Proceed to Payment</button>
                </form>
                <a href="/fines" class="btn btn-outline-secondary">Back to Fines</a>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>

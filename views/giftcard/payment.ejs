<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Payment - Gift Card Purchase</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/theme.css">
  <script src="https://www.paypal.com/sdk/js?client-id=<%= process.env.PAYPAL_CLIENT_ID %>&currency=SGD"></script>
  <script src="https://js.stripe.com/v3/"></script>
  <style>
    body { 
      background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
      min-height: 100vh;
      color: #ffffff;
    }
    .page-header { 
      background: linear-gradient(135deg, #000000 0%, #1a1a1a 50%, #ff3333 100%);
      color: white; 
      padding: 60px 0; 
      margin-bottom: 40px;
      border-bottom: 3px solid #ff3333;
      box-shadow: 0 10px 40px rgba(255, 51, 51, 0.3);
    }
    .page-header h1 {
      font-weight: 800;
      text-transform: uppercase;
      letter-spacing: 3px;
      text-shadow: 0 0 20px rgba(255, 51, 51, 0.5);
    }
    .page-header p {
      color: #a8a8a8;
      letter-spacing: 1px;
    }
    .payment-option {
      background: linear-gradient(135deg, #1a1a1a 0%, #0a0a0a 100%);
      border: 2px solid #333;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.5);
      padding: 30px;
      margin-bottom: 20px;
      transition: all 0.3s ease;
      cursor: pointer;
    }
    .payment-option:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 50px rgba(255, 51, 51, 0.3);
      border-color: #ff3333;
    }
    .payment-icon {
      font-size: 3rem;
      margin-bottom: 15px;
    }
    .payment-option h4 {
      color: #ffffff;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    .payment-option p {
      color: #a8a8a8;
    }
    .payment-btn {
      width: 100%;
      padding: 15px;
      font-size: 1.1rem;
      border-radius: 10px;
      color: white !important;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
      transition: all 0.3s ease;
      border: none;
    }
    .payment-btn:hover {
      transform: scale(1.02);
      box-shadow: 0 8px 25px rgba(255, 51, 51, 0.4);
    }
    .wallet-balance {
      background: linear-gradient(135deg, #ff3333 0%, #cc0000 100%);
      color: white;
      padding: 30px;
      border-radius: 15px;
      margin-bottom: 30px;
      border: 2px solid #ff3333;
      box-shadow: 0 10px 40px rgba(255, 51, 51, 0.4);
    }
    .wallet-balance h5 {
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 2px;
    }
    .wallet-balance h2 {
      color: #ffd700;
      font-weight: 900;
      text-shadow: 0 0 20px rgba(255, 215, 0, 0.5);
    }
    .gift-card-summary {
      background: linear-gradient(135deg, #1a1a1a 0%, #0a0a0a 100%);
      border: 2px solid #ff3333;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(255, 51, 51, 0.3);
      margin-bottom: 30px;
    }
    .gift-card-summary h5 {
      color: #ff3333;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 2px;
    }
    .gift-card-summary strong {
      color: #ffd700 !important;
      font-size: 1.3rem;
    }
    .gift-card-summary .text-muted {
      color: #a8a8a8 !important;
    }
    .alert-danger {
      background: rgba(255, 51, 51, 0.2);
      border: 1px solid #ff3333;
      color: #ffffff;
    }
    .alert-info {
      background: rgba(0, 212, 255, 0.2);
      border: 1px solid #00d4ff;
      color: #ffffff;
    }
    .btn-close {
      filter: invert(1);
    }
  </style>
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="page-header">
    <div class="container">
      <h1><i class="fas fa-credit-card"></i> Payment for Gift Card</h1>
      <p class="mb-0">Choose your payment method</p>
    </div>
  </div>

  <div class="container pb-5">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        
        <% if (messages.error && messages.error.length > 0) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= messages.error[0] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>

        <% if (messages.info && messages.info.length > 0) { %>
          <div class="alert alert-info alert-dismissible fade show" role="alert">
            <%= messages.info[0] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>

        <!-- Gift Card Summary -->
        <div class="gift-card-summary">
          <h5 class="mb-3"><i class="fas fa-gift me-2"></i>Gift Card Purchase</h5>
          <div class="d-flex justify-content-between mb-2">
            <span style="color: #ffffff;">Gift Card Amount:</span>
            <strong>$<%= amount.toFixed(2) %></strong>
          </div>
          <% if (giftCardDetails.recipientEmail) { %>
          <div class="mt-3 pt-3 border-top">
            <small class="text-muted">
              <i class="fas fa-envelope me-1"></i> Will be sent to: <%= giftCardDetails.recipientEmail %>
            </small>
          </div>
          <% } %>
        </div>

        <!-- Wallet Balance -->
        <% if (walletBalance > 0) { %>
        <div class="wallet-balance text-center">
          <h5><i class="fas fa-wallet"></i> Wallet Balance</h5>
          <h2 class="mb-0">$<%= walletBalance.toFixed(2) %></h2>
          <% if (walletBalance >= amount) { %>
            <p class="mb-0 mt-2"><i class="fas fa-check-circle"></i> Sufficient balance to pay with wallet</p>
          <% } else { %>
            <p class="mb-0 mt-2">Additional $<%= (amount - walletBalance).toFixed(2) %> needed</p>
          <% } %>
        </div>
        <% } %>

        <!-- Payment Options -->
        <div class="row">
          
          <!-- Wallet Payment (if sufficient balance) -->
          <% if (walletBalance >= amount) { %>
          <div class="col-md-6">
            <div class="payment-option text-center">
              <div class="payment-icon" style="color: #ff3333;">
                <i class="fas fa-wallet"></i>
              </div>
              <h4>Pay with Wallet</h4>
              <p class="text-muted">Instant payment from your wallet balance</p>
              <form action="/giftcards/payment/wallet" method="POST">
                <button type="submit" class="btn payment-btn" style="background: linear-gradient(135deg, #ff3333 0%, #cc0000 100%);">
                  <i class="fas fa-wallet"></i> Use Wallet ($<%= walletBalance.toFixed(2) %>)
                </button>
              </form>
            </div>
          </div>
          <% } %>
          
          <!-- NETS QR Payment -->
          <div class="col-md-6">
            <div class="payment-option text-center">
              <div class="payment-icon" style="color: #ffd700;">
                <i class="fas fa-qrcode"></i>
              </div>
              <h4>NETS QR</h4>
              <p class="text-muted">Scan QR code to pay</p>
              <form action="/giftcards/payment/nets" method="POST">
                <button type="submit" class="btn payment-btn" style="background: linear-gradient(135deg, #ffd700 0%, #ccaa00 100%); color: #0a0a0a !important;">
                  <i class="fas fa-qrcode"></i> Pay with NETS
                </button>
              </form>
            </div>
          </div>

          <!-- PayPal Payment -->
          <div class="col-md-6">
            <div class="payment-option text-center">
              <div class="payment-icon" style="color: #00d4ff;">
                <i class="fab fa-paypal"></i>
              </div>
              <h4>PayPal</h4>
              <p class="text-muted">Pay securely with PayPal</p>
              <div id="paypal-button-container-giftcard"></div>
            </div>
          </div>

          <!-- Stripe Payment -->
          <div class="col-md-6">
            <div class="payment-option text-center">
              <div class="payment-icon" style="color: #a855f7;">
                <i class="fab fa-cc-stripe"></i>
              </div>
              <h4>Stripe</h4>
              <p class="text-muted">Pay with credit/debit card</p>
              <button id="stripe-button-giftcard" class="btn payment-btn" style="background: linear-gradient(135deg, #a855f7 0%, #7c3aed 100%);">
                <i class="fas fa-credit-card"></i> Pay with Stripe
              </button>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const giftCardAmount = <%= amount %>;

    // PayPal Integration
    <% if (process.env.PAYPAL_CLIENT_ID) { %>
    paypal.Buttons({
      createOrder: function(data, actions) {
        return fetch('/api/paypal/create-order', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ 
            amount: giftCardAmount.toFixed(2),
            currency: 'SGD'
          })
        })
        .then(res => res.json())
        .then(data => {
          if (data.id) {
            return data.id;
          } else {
            throw new Error('Failed to create order');
          }
        });
      },
      onApprove: function(data, actions) {
        return fetch('/api/paypal/capture-order', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ orderID: data.orderID })
        })
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            window.location.href = '/giftcards/payment/paypal/success?orderID=' + data.orderID;
          } else {
            throw new Error('Payment capture failed');
          }
        });
      },
      onError: function(err) {
        console.error('PayPal error:', err);
        alert('Payment failed. Please try again.');
      }
    }).render('#paypal-button-container-giftcard');
    <% } %>

    // Stripe Integration
    <% if (process.env.STRIPE_PUBLISHABLE_KEY) { %>
    const stripe = Stripe('<%= process.env.STRIPE_PUBLISHABLE_KEY %>');
    
    document.getElementById('stripe-button-giftcard').addEventListener('click', async () => {
      const button = document.getElementById('stripe-button-giftcard');
      button.disabled = true;
      button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
      
      try {
        const response = await fetch('/giftcards/payment/stripe/create-intent', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ amount: giftCardAmount.toFixed(2) })
        });
        
        const data = await response.json();
        
        if (!data.success) {
          throw new Error(data.error || 'Failed to create payment');
        }
        
        window.location.href = '/giftcards/payment/stripe/checkout?clientSecret=' + data.clientSecret + '&amount=' + giftCardAmount.toFixed(2);
      } catch (error) {
        console.error('Stripe error:', error);
        alert('Payment failed: ' + error.message);
        button.disabled = false;
        button.innerHTML = '<i class="fas fa-credit-card"></i> Pay with Stripe';
      }
    });
    <% } %>
  </script>
</body>
</html>

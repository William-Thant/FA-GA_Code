<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Payment - Isaac's Cardealership</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/theme.css">
  <script src="https://www.paypal.com/sdk/js?client-id=<%= process.env.PAYPAL_CLIENT_ID %>&currency=SGD"></script>
  <script src="https://js.stripe.com/v3/"></script>
  <style>
    body { 
      background-color: #0a0a0a;
      color: #ffffff;
    }
    
    .page-header { 
      background: linear-gradient(135deg, #1a1a1a 0%, #0a0a0a 100%);
      border-bottom: 2px solid #ff3333;
      color: white; 
      padding: 60px 0 40px; 
      margin-bottom: 40px; 
      position: relative;
      overflow: hidden;
    }
    
    .page-header::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        linear-gradient(45deg, transparent 48%, rgba(255, 51, 51, 0.03) 49%, rgba(255, 51, 51, 0.03) 51%, transparent 52%),
        linear-gradient(-45deg, transparent 48%, rgba(0, 212, 255, 0.03) 49%, rgba(0, 212, 255, 0.03) 51%, transparent 52%);
      background-size: 20px 20px;
      z-index: 0;
    }
    
    .page-header .container {
      position: relative;
      z-index: 1;
    }
    
    .page-header h1 {
      color: #ffffff;
      font-size: 2.5rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 2px;
      margin-bottom: 10px;
    }
    
    .page-header h1 i {
      color: #ff3333;
      margin-right: 15px;
    }
    
    .page-header p {
      color: #00d4ff;
      font-size: 1.1rem;
    }
    
    .payment-option {
      background: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
      border: 2px solid #2a2a2a;
      border-radius: 15px;
      padding: 30px;
      margin-bottom: 25px;
      transition: all 0.3s ease;
      cursor: pointer;
      height: 100%;
    }
    
    .payment-option:hover {
      transform: translateY(-5px);
      border-color: #ff3333;
      box-shadow: 0 10px 30px rgba(255, 51, 51, 0.3);
    }
    
    .payment-icon {
      font-size: 3rem;
      margin-bottom: 15px;
    }
    
    .payment-option h4 {
      color: #ffffff;
      font-weight: 700;
      font-size: 1.5rem;
      margin-bottom: 10px;
    }
    
    .payment-option .text-muted {
      color: #888888 !important;
    }
    
    .payment-btn {
      width: 100%;
      padding: 14px;
      font-size: 1.1rem;
      font-weight: 700;
      border-radius: 8px;
      text-transform: uppercase;
      letter-spacing: 1px;
      transition: all 0.3s ease;
      color: #ffffff !important;
    }
    
    .wallet-balance {
      background: linear-gradient(135deg, #ff3333 0%, #cc0000 100%);
      color: white;
      padding: 30px;
      border-radius: 15px;
      margin-bottom: 30px;
      border: 2px solid #ff3333;
      box-shadow: 0 10px 30px rgba(255, 51, 51, 0.3);
    }
    
    .wallet-balance h5 {
      font-size: 1.3rem;
      font-weight: 700;
      margin-bottom: 15px;
    }
    
    .wallet-balance h2 {
      font-size: 3rem;
      font-weight: 900;
      color: #ffd700;
      text-shadow: 0 0 20px rgba(255, 215, 0, 0.5);
    }
    
    .card {
      background: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
      border: 2px solid #2a2a2a;
      color: #ffffff;
      border-radius: 15px;
    }
    
    .card-body {
      padding: 30px;
    }
    
    .card h5 {
      color: #ff3333;
      font-weight: 700;
      font-size: 1.4rem;
      margin-bottom: 20px;
    }
    
    .text-success {
      color: #00d4ff !important;
    }
    
    .form-control {
      background: #0a0a0a;
      border: 2px solid #2a2a2a;
      color: #ffffff;
      padding: 12px;
      border-radius: 8px;
    }
    
    .form-control:focus {
      background: #0a0a0a;
      border-color: #ff3333;
      color: #ffffff;
      box-shadow: 0 0 10px rgba(255, 51, 51, 0.3);
    }
    
    .btn-outline-primary {
      border-color: #ff3333;
      color: #ff3333;
      font-weight: 700;
    }
    
    .btn-outline-primary:hover {
      background: #ff3333;
      border-color: #ff3333;
      color: #ffffff;
    }
    
    .btn-primary {
      background: linear-gradient(135deg, #ff3333 0%, #cc0000 100%);
      border: none;
      color: #ffffff !important;
    }
    
    .btn-primary:hover {
      background: linear-gradient(135deg, #cc0000 0%, #990000 100%);
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(255, 51, 51, 0.4);
    }
    
    .btn-success {
      background: linear-gradient(135deg, #00d4ff 0%, #0099cc 100%);
      border: none;
      color: #000000 !important;
      font-weight: 700;
    }
    
    .btn-success:hover {
      background: linear-gradient(135deg, #0099cc 0%, #006699 100%);
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(0, 212, 255, 0.4);
    }
    
    .btn-outline-secondary {
      border-color: #2a2a2a;
      color: #888888;
    }
    
    .btn-outline-secondary:hover {
      background: #2a2a2a;
      border-color: #2a2a2a;
      color: #ffffff;
    }
    
    .alert-success {
      background: linear-gradient(135deg, #1a3d1a 0%, #0d2a0d 100%);
      border: 2px solid #00ff00;
      color: #00ff00;
    }
    
    .alert-danger {
      background: linear-gradient(135deg, #3d1a1a 0%, #2a0d0d 100%);
      border: 2px solid #ff3333;
      color: #ff3333;
    }
    
    .alert-warning {
      background: linear-gradient(135deg, #3d3d1a 0%, #2a2a0d 100%);
      border: 2px solid #ffd700;
      color: #ffd700;
    }
    
    .btn-sm.btn-danger {
      background: #ff3333;
      border: none;
      font-size: 0.875rem;
      padding: 5px 12px;
    }
    
    hr {
      border-color: #2a2a2a;
      opacity: 1;
    }
    
    a {
      color: #00d4ff;
    }
    
    a:hover {
      color: #ff3333;
    }
    
    /* PayPal Button Container Styling */
    #paypal-button-container {
      margin-top: 20px;
    }
    
    /* Stripe Button Specific */
    .btn-stripe {
      background: linear-gradient(135deg, #635bff 0%, #4f46e5 100%);
      border: none;
      color: #ffffff !important;
    }
    
    .btn-stripe:hover {
      background: linear-gradient(135deg, #4f46e5 0%, #4338ca 100%);
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(99, 91, 255, 0.4);
    }
    
    /* NETS Button Specific */
    .btn-nets {
      background: linear-gradient(135deg, #ffd700 0%, #ffb700 100%);
      border: none;
      color: #000000 !important;
      font-weight: 700;
    }
    
    .btn-nets:hover {
      background: linear-gradient(135deg, #ffb700 0%, #ff9700 100%);
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(255, 215, 0, 0.4);
    }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="page-header">
    <div class="container">
      <h1><i class="fas fa-credit-card"></i> Select Payment Method</h1>
      <p class="mb-0">Complete your vehicle purchase securely</p>
    </div>
  </div>

  <div class="container pb-5">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        
        <!-- Order Summary -->
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="mb-3"><i class="fas fa-receipt me-2"></i>Order Summary</h5>
            <div class="d-flex justify-content-between mb-2">
              <span>Subtotal:</span>
              <span style="color: #ffd700;">$<%= subtotal.toFixed(2) %></span>
            </div>
            <% if (discount > 0) { %>
            <div class="d-flex justify-content-between mb-2 text-success">
              <span>Discount:</span>
              <span>-$<%= discount.toFixed(2) %></span>
            </div>
            <% } %>
            <div class="d-flex justify-content-between mb-2">
              <span>Platform Fee (10%):</span>
              <span style="color: #ff3333;">$<%= platformFee.toFixed(2) %></span>
            </div>
            <div class="d-flex justify-content-between mb-2">
              <span>Tax (10%):</span>
              <span style="color: #ffd700;">$<%= tax.toFixed(2) %></span>
            </div>
            <hr>
            <div class="d-flex justify-content-between">
              <strong style="color: #ffffff; font-size: 1.3rem;">Total:</strong>
              <strong class="text-success" style="font-size: 1.3rem;" id="order-total" data-total="<%= total.toFixed(2) %>">$<%= total.toFixed(2) %></strong>
            </div>
            <small class="text-muted d-block mt-2">
              <i class="fas fa-info-circle"></i> Platform fee supports marketplace operations and seller services
            </small>
          </div>
        </div>

        <!-- Wallet Balance -->
        <% if (walletBalance > 0) { %>
        <div class="wallet-balance text-center">
          <h5><i class="fas fa-wallet me-2"></i> Wallet Balance</h5>
          <h2 class="mb-0">$<%= walletBalance.toFixed(2) %></h2>
          <% if (walletBalance >= total) { %>
            <p class="mb-0 mt-2"><i class="fas fa-check-circle me-2"></i> Sufficient balance to pay with wallet</p>
          <% } else { %>
            <p class="mb-0 mt-2">Additional $<%= (total - walletBalance).toFixed(2) %> needed</p>
          <% } %>
        </div>
        <% } %>

        <!-- Payment Options -->
        <div class="row">
          
          <!-- Wallet Payment (if sufficient balance) -->
          <% if (walletBalance >= total) { %>
          <div class="col-md-6 mb-3">
            <div class="payment-option text-center">
              <div class="payment-icon" style="color: #ff3333;">
                <i class="fas fa-wallet"></i>
              </div>
              <h4>Pay with Wallet</h4>
              <p class="text-muted">Instant payment from your wallet balance</p>
              <form action="/payment/wallet" method="POST" id="walletPaymentForm" onsubmit="return handleWalletSubmit(event)">
                <button type="submit" class="btn btn-primary payment-btn" id="walletPayBtn">
                  <i class="fas fa-wallet me-2"></i> Use Wallet ($<%= walletBalance.toFixed(2) %>)
                </button>
              </form>
            </div>
          </div>
          <% } %>
          
          <!-- NETS QR Payment -->
          <div class="col-md-6 mb-3">
            <div class="payment-option text-center">
              <div class="payment-icon" style="color: #ffd700;">
                <i class="fas fa-qrcode"></i>
              </div>
              <h4>NETS QR</h4>
              <p class="text-muted">Scan QR code to pay with your banking app</p>
              <form action="/generateNETSQR" method="POST">
                <input type="hidden" name="cartTotal" value="<%= total.toFixed(2) %>">
                <button type="submit" class="btn btn-nets payment-btn">
                  <i class="fas fa-qrcode me-2"></i> Pay with NETS
                </button>
              </form>
            </div>
          </div>

          <!-- PayPal Payment -->
          <div class="col-md-6 mb-3">
            <div class="payment-option text-center">
              <div class="payment-icon" style="color: #0070ba;">
                <i class="fab fa-paypal"></i>
              </div>
              <h4>PayPal</h4>
              <p class="text-muted">Pay securely with your PayPal account</p>
              <div id="paypal-button-container"></div>
            </div>
          </div>

          <!-- Stripe Payment -->
          <div class="col-md-6 mb-3">
            <div class="payment-option text-center">
              <div class="payment-icon" style="color: #635bff;">
                <i class="fab fa-stripe"></i>
              </div>
              <h4>Stripe</h4>
              <p class="text-muted">Pay with credit or debit card</p>
              <button id="stripe-button" class="btn btn-stripe payment-btn">
                <i class="fas fa-credit-card me-2"></i> Pay with Stripe
              </button>
            </div>
          </div>

        </div>

        <div class="text-center mt-4">
          <a href="/cart" class="btn btn-outline-secondary btn-lg">
            <i class="fas fa-arrow-left me-2"></i> Back to Cart
          </a>
        </div>

      </div>
    </div>
  </div>
  </div>

  <script>
    const cartTotal = <%= total %>;
    
    // PayPal Integration
    if (typeof paypal !== 'undefined') {
      paypal.Buttons({
        style: {
          layout: 'vertical',
          color: 'gold',
          shape: 'rect',
          label: 'pay'
        },
        createOrder: function (data, actions) {
          return fetch('/api/paypal/create-order', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ 
              amount: cartTotal.toFixed(2),
              currency: 'SGD'  // Default to SGD
            })
          })
            .then(res => res.json())
            .then(data => {
              if (data.id) {
                return data.id;
              } else {
                throw new Error('Failed to create order');
              }
            });
        },
        onApprove: function (data, actions) {
          return fetch('/api/paypal/capture-order', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ orderID: data.orderID })
          })
            .then(res => res.json())
            .then(details => {
              if (details.success || details.status === "COMPLETED") {
                window.location.href = '/payment/success?orderId=' + details.orderId + '&method=PayPal';
              } else {
                const errorMsg = details.error || 'Payment could not be completed';
                window.location.href = '/payment/fail?error=' + encodeURIComponent(errorMsg) + '&method=PayPal';
              }
            })
            .catch(err => {
              console.error('Payment error:', err);
              window.location.href = '/payment/fail?error=' + encodeURIComponent('Payment processing error') + '&method=PayPal';
            });
        },
        onError: function (err) {
          console.error('PayPal error:', err);
          window.location.href = '/payment/fail?error=' + encodeURIComponent('An error occurred during payment') + '&method=PayPal';
        }
      }).render('#paypal-button-container');
    }

    // Stripe Integration
    <% if (process.env.STRIPE_PUBLISHABLE_KEY) { %>
    const stripe = Stripe('<%= process.env.STRIPE_PUBLISHABLE_KEY %>');
    
    document.getElementById('stripe-button').addEventListener('click', async () => {
      const button = document.getElementById('stripe-button');
      button.disabled = true;
      button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
      
      try {
        const response = await fetch('/api/stripe/create-payment-intent', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ amount: cartTotal.toFixed(2) })
        });
        
        const data = await response.json();
        
        if (!data.success) {
          throw new Error(data.error || 'Failed to create payment intent');
        }
        
        window.location.href = '/stripe/checkout?clientSecret=' + data.clientSecret + '&amount=' + cartTotal.toFixed(2);
      } catch (error) {
        console.error('Stripe error:', error);
        alert('Payment failed: ' + error.message);
        button.disabled = false;
        button.innerHTML = '<i class="fas fa-credit-card"></i> Pay with Stripe';
      }
    });
    <% } %>
  </script>

  <script>
    let isSubmitting = false;
    
    function handleWalletSubmit(event) {
      if (isSubmitting) {
        event.preventDefault();
        return false;
      }
      
      isSubmitting = true;
      const btn = document.getElementById('walletPayBtn');
      btn.disabled = true;
      btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
      return true;
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

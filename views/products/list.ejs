<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="/theme.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    /* Override any Bootstrap/default styles */
    html, body {
      background: #0a0a0a !important;
      color: #ffffff !important;
      margin: 0;
      padding: 0;
    }
    
    body {
      background: linear-gradient(135deg, #0a0a0a 0%, #0a0a0a 100%) !important;
      position: relative;
    }
    
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        radial-gradient(circle at 20% 50%, rgba(255, 51, 51, 0.05) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(0, 212, 255, 0.05) 0%, transparent 50%);
      pointer-events: none;
      z-index: 0;
    }
    
    /* Ensure all containers are transparent or dark */
    .container, .container-fluid {
      position: relative;
      z-index: 1;
    }
    
    .page-header {
      background: linear-gradient(135deg, rgba(255, 51, 51, 0.1) 0%, rgba(0, 0, 0, 0.9) 100%),
                  url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1920 400"><rect fill="%23ff3333" opacity="0.05" width="1920" height="400"/></svg>');
      padding: 80px 0 100px;
      margin-bottom: 60px;
      border-bottom: 3px solid #ff3333;
      position: relative;
      overflow: hidden;
    }
    
    .page-header::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: repeating-linear-gradient(
        90deg,
        transparent,
        transparent 100px,
        rgba(255, 51, 51, 0.03) 100px,
        rgba(255, 51, 51, 0.03) 101px
      );
    }
    
    .page-title {
      font-size: 4rem;
      font-weight: 900;
      color: #ffffff;
      text-transform: uppercase;
      letter-spacing: 4px;
      margin-bottom: 20px;
      text-shadow: 0 0 40px rgba(255, 51, 51, 0.5);
      position: relative;
      z-index: 1;
    }
    
    .page-subtitle {
      color: #ffffff;
      font-size: 1.4rem;
      letter-spacing: 2px;
      position: relative;
      z-index: 1;
      font-weight: 300;
    }
    
    .filters-section {
      background: linear-gradient(145deg, #141414, #1a1a1a);
      padding: 30px;
      border-radius: 15px;
      margin-bottom: 50px;
      border: 1px solid #333;
      box-shadow: 0 5px 20px rgba(0,0,0,0.5);
    }
    
    .filter-title {
      font-size: 1.2rem;
      font-weight: 700;
      color: #ffffff;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 20px;
    }
    
    .form-control, .form-select {
      background: rgba(40, 40, 40, 0.8);
      border: 2px solid #333;
      color: #ffffff;
      padding: 12px 15px;
      border-radius: 10px;
      font-weight: 600;
      transition: all 0.3s ease;
    }
    
    .form-control:focus, .form-select:focus {
      background: rgba(50, 50, 50, 0.9);
      border-color: #ff3333;
      box-shadow: 0 0 20px rgba(255, 51, 51, 0.3);
      color: #ffffff;
    }
    
    .form-control::placeholder {
      color: #666;
    }
    
    .btn-primary {
      background: linear-gradient(135deg, #ff3333, #cc0000);
      border: none;
      color: white;
      font-weight: 800;
      text-transform: uppercase;
      letter-spacing: 1.5px;
      padding: 12px 30px;
      border-radius: 10px;
      transition: all 0.3s ease;
    }
    
    .btn-primary:hover {
      box-shadow: 0 0 40px rgba(255, 51, 51, 0.6);
      transform: translateY(-2px);
      background: linear-gradient(135deg, #ff4444, #dd0000);
    }
    
    .btn-success {
      background: linear-gradient(135deg, #00d4ff, #0099cc);
      border: none;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: white !important;
    }
    
    .btn-success:hover {
      box-shadow: 0 0 30px rgba(0, 212, 255, 0.5);
      transform: translateY(-2px);
      color: white !important;
    }
    
    .vehicle-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
      gap: 30px;
      margin-bottom: 60px;
    }
    
    .vehicle-card {
      background: linear-gradient(145deg, #141414, #1a1a1a);
      border-radius: 20px;
      overflow: hidden;
      border: 1px solid #222;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      box-shadow: 0 10px 30px rgba(0,0,0,0.5);
    }
    
    .vehicle-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, #ff3333, #00d4ff);
      opacity: 0;
      transition: opacity 0.4s ease;
    }
    
    .vehicle-card:hover {
      transform: translateY(-15px) scale(1.02);
      box-shadow: 0 0 50px rgba(255, 51, 51, 0.4), 0 20px 50px rgba(0,0,0,0.7);
      border-color: #ff3333;
    }
    
    .vehicle-card:hover::before {
      opacity: 1;
    }
    
    .vehicle-image-container {
      position: relative;
      width: 100%;
      height: 280px;
      overflow: hidden;
      background: linear-gradient(135deg, #1a1a1a, #0a0a0a);
    }
    
    .vehicle-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .vehicle-card:hover .vehicle-image {
      transform: scale(1.15);
    }
    
    .condition-badge {
      position: absolute;
      top: 15px;
      right: 15px;
      background: rgba(0, 0, 0, 0.8);
      color: #ffd700;
      padding: 8px 20px;
      border-radius: 25px;
      font-size: 0.85rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
      border: 1px solid #ffd700;
      backdrop-filter: blur(10px);
      z-index: 10;
    }
    
    .condition-badge.used {
      color: #00d4ff;
      border-color: #00d4ff;
    }
    
    .vehicle-body {
      padding: 30px;
    }
    
    .vehicle-name {
      font-size: 1.6rem;
      font-weight: 800;
      color: #ffffff;
      margin-bottom: 8px;
      text-transform: uppercase;
      letter-spacing: 1px;
      line-height: 1.3;
    }
    
    .vehicle-name a {
      color: #ffffff;
      text-decoration: none;
      transition: color 0.3s ease;
    }
    
    .vehicle-name a:hover {
      color: #ff3333;
    }
    
    .vehicle-meta {
      display: flex;
      gap: 15px;
      margin-bottom: 20px;
      font-size: 0.9rem;
      color: #a8a8a8;
    }
    
    .vehicle-meta-item {
      display: flex;
      align-items: center;
      gap: 5px;
    }
    
    .vehicle-price {
      font-size: 2.5rem;
      font-weight: 900;
      background: linear-gradient(135deg, #ff3333, #ff6666);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 20px;
      text-shadow: 0 0 30px rgba(255, 51, 51, 0.5);
    }
    
    .vehicle-specs {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      margin-bottom: 25px;
    }
    
    .spec-badge {
      background: rgba(0, 212, 255, 0.15);
      color: #00d4ff;
      padding: 8px 18px;
      border-radius: 25px;
      font-size: 0.85rem;
      font-weight: 700;
      border: 1px solid rgba(0, 212, 255, 0.4);
      transition: all 0.3s ease;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    
    .availability-badge {
      background: rgba(0, 255, 136, 0.15);
      color: #00ff88;
      border-color: rgba(0, 255, 136, 0.4);
    }
    
    .sold-badge {
      background: rgba(255, 51, 51, 0.15);
      color: #ff3333;
      border-color: rgba(255, 51, 51, 0.4);
    }
    
    .user-welcome {
      background: linear-gradient(145deg, #141414, #1a1a1a);
      padding: 20px 30px;
      border-radius: 15px;
      margin-bottom: 40px;
      border: 1px solid #333;
      display: flex;
      align-items: center;
      gap: 15px;
    }
    
    .user-welcome i {
      font-size: 2rem;
      color: #00d4ff;
    }
    
    .user-welcome-text {
      color: #a8a8a8;
      font-size: 1.1rem;
    }
    
    .user-welcome-name {
      color: #ffffff;
      font-weight: 700;
      font-size: 1.2rem;
      letter-spacing: 0.5px;
    }
    
    footer {
      background: #000000 !important;
      border-top: 3px solid #ff3333;
      padding: 30px 0;
      margin-top: 80px;
    }
    
    .empty-state {
      text-align: center;
      padding: 100px 20px;
    }
    
    .empty-state i {
      font-size: 6rem;
      color: #333;
      margin-bottom: 30px;
      opacity: 0.5;
    }
    
    .empty-state h3 {
      color: #ffffff;
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 15px;
    }
    
    .empty-state p {
      color: #a8a8a8;
      font-size: 1.2rem;
    }
    
    @media (max-width: 768px) {
      .vehicle-grid {
        grid-template-columns: 1fr;
      }
      .page-title {
        font-size: 2.5rem;
      }
    }
  </style>
  <title>Browse Inventory - Isaac's Cardealership</title>
</head>
<body>
<%- include('../partials/navbar') %>

<div class="page-header">
  <div class="container text-center">
    <h1 class="page-title">
      <i class="fas fa-warehouse"></i> INVENTORY
    </h1>
    <p class="page-subtitle">Discover Your Dream Vehicle Today</p>
  </div>
</div>

<div class="container">
  <% if (user) { %>
    <div class="user-welcome">
      <i class="fas fa-user-circle"></i>
      <div>
        <div class="user-welcome-text">Welcome back,</div>
        <div class="user-welcome-name"><%= user.name || user.username %></div>
      </div>
    </div>
  <% } %>

  <!-- Search and Filter Section -->
  <div class="filters-section">
    <div class="filter-title">
      <i class="fas fa-search"></i> Search & Filter Vehicles
    </div>
    <form method="GET" action="/shop">
      <div class="row g-3 align-items-end">
        <div class="col-md-4">
          <label class="form-label text-white fw-bold">Search</label>
          <input type="text" name="search" class="form-control" placeholder="Search by name, make, model..." value="<%= typeof search !== 'undefined' ? search : '' %>">
        </div>
        <div class="col-md-3">
          <label class="form-label text-white fw-bold">Category</label>
          <select name="category" class="form-select">
            <option value="">All Categories</option>
            <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
              <% categories.forEach(cat => { %>
                <% if (cat.category) { %>
                  <option value="<%= cat.category %>" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === cat.category) ? 'selected' : '' %>><%= cat.category %></option>
                <% } %>
              <% }); %>
            <% } %>
          </select>
        </div>
        <div class="col-md-3">
          <label class="form-label text-white fw-bold">Sort By</label>
          <select name="sort" class="form-select">
            <option value="">Default</option>
            <option value="name_asc" <%= (typeof sort !== 'undefined' && sort === 'name_asc') ? 'selected' : '' %>>Name (A-Z)</option>
            <option value="name_desc" <%= (typeof sort !== 'undefined' && sort === 'name_desc') ? 'selected' : '' %>>Name (Z-A)</option>
            <option value="stock_high" <%= (typeof sort !== 'undefined' && sort === 'stock_high') ? 'selected' : '' %>>Stock (High-Low)</option>
            <option value="stock_low" <%= (typeof sort !== 'undefined' && sort === 'stock_low') ? 'selected' : '' %>>Stock (Low-High)</option>
          </select>
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn btn-primary w-100">
            <i class="fas fa-search"></i> Apply
          </button>
        </div>
      </div>
    </form>
  </div>

  <div class="mb-4">
    <a href="/cart" class="btn btn-success btn-lg">
      <i class="fas fa-shopping-cart"></i> View Cart
    </a>
  </div>

  <% if (products && products.length > 0) { %>
    <div class="vehicle-grid">
      <% products.forEach(product => { %>
        <div class="vehicle-card">
          <a href="/product/<%= product.id %>" style="text-decoration: none; color: inherit;">
            <div class="vehicle-image-container">
              <% 
                // Use uploaded image if available, otherwise use default
                let imageUrl = 'https://images.unsplash.com/photo-1492144534655-ae79c964c9d7?w=800&h=600&fit=crop';
                if (product.image) {
                  imageUrl = '/images/' + product.image;
                }
              %>
              <img src="<%= imageUrl %>" alt="<%= product.productName %>" class="vehicle-image">
              <% if (product.condition_status) { %>
                <span class="condition-badge <%= product.condition_status === 'used' ? 'used' : '' %>">
                  <%= product.condition_status === 'new' ? 'Brand New' : 'Pre-Owned' %>
                </span>
              <% } %>
            </div>
          </a>
          
          <div class="vehicle-body">
            <h3 class="vehicle-name">
              <a href="/product/<%= product.id %>">
                <%= product.productName %>
              </a>
            </h3>
            
            <div class="vehicle-meta">
              <% if (product.year) { %>
                <div class="vehicle-meta-item">
                  <i class="fas fa-calendar-alt"></i>
                  <span><%= product.year %></span>
                </div>
              <% } %>
              <% if (product.mileage !== undefined) { %>
                <div class="vehicle-meta-item">
                  <i class="fas fa-tachometer-alt"></i>
                  <span><%= product.mileage.toLocaleString() %> mi</span>
                </div>
              <% } %>
              <% if (product.fuel_type) { %>
                <div class="vehicle-meta-item">
                  <i class="fas fa-gas-pump"></i>
                  <span><%= product.fuel_type %></span>
                </div>
              <% } %>
            </div>
            
            <div class="vehicle-price">$<%= product.price.toLocaleString() %></div>
            
            <div class="vehicle-specs">
              <% if (product.category) { %>
                <span class="spec-badge">
                  <i class="fas fa-tag"></i> <%= product.category %>
                </span>
              <% } %>
              <% if (product.transmission) { %>
                <span class="spec-badge">
                  <i class="fas fa-cog"></i> <%= product.transmission %>
                </span>
              <% } %>
              <% if (product.quantity > 0) { %>
                <span class="spec-badge availability-badge">
                  <i class="fas fa-check-circle"></i> In Stock
                </span>
              <% } else { %>
                <span class="spec-badge sold-badge">
                  <i class="fas fa-times-circle"></i> Sold Out
                </span>
              <% } %>
            </div>

            <form action="/add-to-cart/<%= product.id %>" method="POST" class="add-to-cart-form">
              <div class="input-group mb-3">
                <input type="number" name="quantity" class="form-control" value="1" min="1" max="<%= product.quantity %>" <%= product.quantity <= 0 ? 'disabled' : '' %>>
                <span class="input-group-text" style="background: #ff3333; color: white; font-weight: bold; border-color: #ff3333;">Max: <%= product.quantity %></span>
              </div>
              <button type="submit" class="btn btn-primary w-100" <%= product.quantity <= 0 ? 'disabled' : '' %>>
                <i class="fas fa-heart"></i> Add to Cart
              </button>
            </form>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <div class="empty-state">
      <i class="fas fa-car-side"></i>
      <h3>No Vehicles Available</h3>
      <p>Check back soon for new arrivals and exciting inventory updates!</p>
    </div>
  <% } %>
</div>

<footer class="text-white text-center">
  <div class="container">
    <p class="mb-0">&copy; 2026 Isaac's Cardealership. All rights reserved.</p>
  </div>
</footer>

<script>
  // Handle add to cart forms with AJAX
  document.addEventListener('DOMContentLoaded', function() {
    const forms = document.querySelectorAll('.add-to-cart-form');
    
    forms.forEach(form => {
      form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const quantityInput = form.querySelector('input[name="quantity"]');
        const quantity = quantityInput.value;
        const button = form.querySelector('button[type="submit"]');
        const originalText = button.innerHTML;
        
        button.disabled = true;
        button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Adding...';
        
        try {
          const response = await fetch(form.action, {
            method: 'POST',
            headers: {
              'Accept': 'application/json',
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ quantity: parseInt(quantity) })
          });
          
          const data = await response.json();
          
          if (response.ok && data.success) {
            button.innerHTML = '<i class="fas fa-check"></i> Added!';
            button.style.background = 'linear-gradient(135deg, #00ff88, #00cc66)';
            
            setTimeout(() => {
              button.innerHTML = originalText;
              button.style.background = '';
              button.disabled = false;
            }, 2000);
          } else {
            throw new Error(data.message || 'Failed to add to cart');
          }
        } catch (error) {
          console.error('Error:', error);
          button.innerHTML = '<i class="fas fa-times"></i> Error';
          button.style.background = 'linear-gradient(135deg, #ff3333, #cc0000)';
          setTimeout(() => {
            button.innerHTML = originalText;
            button.style.background = '';
            button.disabled = false;
          }, 2000);
        }
      });
    });
  });
</script>

</body>
</html>

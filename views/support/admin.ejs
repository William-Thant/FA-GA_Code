    }
  </style>
</head>
<body>
<%- include('../partials/navbar') %>

<div class="page-header">
  <div class="container">
    <h1><i class="fas fa-headset"></i> üõ†Ô∏è CUSTOMER SUPPORT CENTER</h1>
    <p class="mb-0" style="color: #ffd700; letter-spacing: 2px; font-weight: 600;">Manage & Respond to Customer Service Tickets</p>
  </div>
</div>

<div class="container pb-5">
  <!-- Flash Messages -->
  <% if (typeof messages !== 'undefined' && messages) { %>
    <% if (messages.error && messages.error.length) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> <%= messages.error.join ? messages.error.join(', ') : messages.error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <% if (messages.success && messages.success.length) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> <%= messages.success.join ? messages.success.join(', ') : messages.success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
  <% } %>

  <!-- Statistics -->
  <div class="row mb-4">
    <div class="col-md-3">
      <div class="stats-card">
        <div class="stats-number" style="color: #00d4ff;"><%= stats.total %></div>
        <div class="text-muted" style="text-transform: uppercase; letter-spacing: 1px; font-weight: 700; font-size: 0.85rem;">Total Tickets</div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="stats-card">
        <div class="stats-number" style="color: #ff3333;"><%= stats.open %></div>
        <div class="text-muted" style="text-transform: uppercase; letter-spacing: 1px; font-weight: 700; font-size: 0.85rem;">Open</div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="stats-card">
        <div class="stats-number" style="color: #ffd700;"><%= stats.inProgress %></div>
        <div class="text-muted" style="text-transform: uppercase; letter-spacing: 1px; font-weight: 700; font-size: 0.85rem;">In Progress</div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="stats-card">
        <div class="stats-number" style="color: #00ff88;"><%= stats.resolved %></div>
        <div class="text-muted" style="text-transform: uppercase; letter-spacing: 1px; font-weight: 700; font-size: 0.85rem;">Resolved</div>
      </div>
    </div>
  </div>

  <!-- Filter Tabs -->
  <ul class="nav nav-tabs mb-4" id="ticketTabs" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button">
        All Tickets (<%= tickets.length %>)
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="open-tab" data-bs-toggle="tab" data-bs-target="#open" type="button">
        Open (<%= tickets.filter(t => t.status === 'open').length %>)
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="high-tab" data-bs-toggle="tab" data-bs-target="#high" type="button">
        High Priority (<%= tickets.filter(t => t.priority === 'high').length %>)
      </button>
    </li>
  </ul>

  <!-- Tickets List -->
  <div class="tab-content">
    <div class="tab-pane fade show active" id="all">
      <% if (tickets.length === 0) { %>
        <div class="text-center py-5 text-muted">
          <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
          <p>No support tickets</p>
        </div>
      <% } else { %>
        <% tickets.forEach(ticket => { %>
          <div class="ticket-card">
            <div class="ticket-header">
              <div class="row align-items-center">
                <div class="col-md-6">
                  <h5 class="mb-1"><%= ticket.subject %></h5>
                  <small class="text-muted">
                    <i class="fas fa-user me-2"></i><%= ticket.username %> (<%= ticket.email %>)
                  </small>
                </div>
                <div class="col-md-6 text-end">
                  <span class="badge <%= ticket.status === 'resolved' ? 'bg-success' : (ticket.status === 'in-progress' ? 'bg-warning text-dark' : (ticket.status === 'closed' ? 'bg-secondary' : 'bg-primary')) %> me-2">
                    <%= ticket.status %>
                  </span>
                  <span class="badge <%= ticket.priority === 'high' ? 'bg-danger' : (ticket.priority === 'medium' ? 'bg-warning text-dark' : 'bg-info') %>">
                    <%= ticket.priority %> priority
                  </span>
                  <div class="mt-2">
                    <small class="text-muted">
                      <i class="fas fa-clock me-1"></i><%= new Date(ticket.created_at).toLocaleString() %>
                    </small>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="mb-3">
              <strong style="color: #ffd700;">Message:</strong>
              <p class="mt-2 mb-0" style="color: #ffffff;"><%= ticket.message %></p>
            </div>
            
            <% if (ticket.admin_response) { %>
              <div class="alert alert-info mb-3">
                <strong><i class="fas fa-reply"></i> Your Response:</strong>
                <p class="mb-0 mt-2"><%= ticket.admin_response %></p>
              </div>
            <% } %>
            
            <form action="/admin/support/respond" method="POST" class="mb-2">
              <input type="hidden" name="ticketId" value="<%= ticket.id %>">
              <div class="row g-2">
                <div class="col-md-6">
                  <textarea class="form-control" name="response" rows="2" placeholder="Type your response..." <%= ticket.status === 'closed' ? 'disabled' : '' %>></textarea>
                </div>
                <div class="col-md-3">
                  <select class="form-select" name="status" <%= ticket.status === 'closed' ? 'disabled' : '' %>>
                    <option value="open" <%= ticket.status === 'open' ? 'selected' : '' %>>Open</option>
                    <option value="in-progress" <%= ticket.status === 'in-progress' ? 'selected' : '' %>>In Progress</option>
                    <option value="resolved" <%= ticket.status === 'resolved' ? 'selected' : '' %>>Resolved</option>
                    <option value="closed" <%= ticket.status === 'closed' ? 'selected' : '' %>>Closed</option>
                  </select>
                </div>
                <div class="col-md-3">
                  <button type="submit" class="btn btn-primary w-100" <%= ticket.status === 'closed' ? 'disabled' : '' %>>
                    <i class="fas fa-paper-plane"></i> Update
                  </button>
                </div>
              </div>
            </form>
            <form action="/support/delete" method="POST" class="mt-2" onsubmit="return confirm('Are you sure you want to delete this ticket?');">
              <input type="hidden" name="ticketId" value="<%= ticket.id %>">
              <button type="submit" class="btn btn-outline-danger btn-sm w-100"><i class="fas fa-trash"></i> Delete Ticket</button>
            </form>
          </div>
        <% }); %>
      <% } %>
    </div>
    
    <div class="tab-pane fade" id="open">
        <% const openTickets = tickets.filter(t => t.status === 'open'); %>
        <% if (openTickets.length === 0) { %>
          <p class="text-muted text-center py-4">No open tickets</p>
        <% } else { %>
          <% openTickets.forEach(ticket => { %>
            <div class="ticket-card">
              <div class="ticket-header">
                <div class="row align-items-center">
                  <div class="col-md-6">
                    <h5 class="mb-1"><%= ticket.subject %></h5>
                    <small class="text-muted">
                      <i class="fas fa-user me-2"></i><%= ticket.username %> (<%= ticket.email %>)
                    </small>
                  </div>
                  <div class="col-md-6 text-end">
                    <span class="badge <%= ticket.status === 'resolved' ? 'bg-success' : (ticket.status === 'in-progress' ? 'bg-warning text-dark' : (ticket.status === 'closed' ? 'bg-secondary' : 'bg-primary')) %> me-2">
                      <%= ticket.status %>
                    </span>
                    <span class="badge <%= ticket.priority === 'high' ? 'bg-danger' : (ticket.priority === 'medium' ? 'bg-warning text-dark' : 'bg-info') %>">
                      <%= ticket.priority %> priority
                    </span>
                    <div class="mt-2">
                      <small class="text-muted">
                        <i class="fas fa-clock me-1"></i><%= new Date(ticket.created_at).toLocaleString() %>
                      </small>
                    </div>
                  </div>
                </div>
              </div>
              <div class="mb-3">
                <strong style="color: #ffd700;">Message:</strong>
                <p class="mt-2 mb-0" style="color: #ffffff;"><%= ticket.message %></p>
              </div>
              <% if (ticket.admin_response) { %>
                <div class="alert alert-info mb-3">
                  <strong><i class="fas fa-reply"></i> Your Response:</strong>
                  <p class="mb-0 mt-2"><%= ticket.admin_response %></p>
                </div>
              <% } %>
              <form action="/admin/support/respond" method="POST" class="mb-2">
                <input type="hidden" name="ticketId" value="<%= ticket.id %>">
                <div class="row g-2">
                  <div class="col-md-6">
                    <textarea class="form-control" name="response" rows="2" placeholder="Type your response..." <%= ticket.status === 'closed' ? 'disabled' : '' %>></textarea>
                  </div>
                  <div class="col-md-3">
                    <select class="form-select" name="status" <%= ticket.status === 'closed' ? 'disabled' : '' %>>
                      <option value="open" <%= ticket.status === 'open' ? 'selected' : '' %>>Open</option>
                      <option value="in-progress" <%= ticket.status === 'in-progress' ? 'selected' : '' %>>In Progress</option>
                      <option value="resolved" <%= ticket.status === 'resolved' ? 'selected' : '' %>>Resolved</option>
                      <option value="closed" <%= ticket.status === 'closed' ? 'selected' : '' %>>Closed</option>
                    </select>
                  </div>
                  <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100" <%= ticket.status === 'closed' ? 'disabled' : '' %>>
                      <i class="fas fa-paper-plane"></i> Update
                    </button>
                  </div>
                </div>
              </form>
              <form action="/support/delete" method="POST" class="mt-2" onsubmit="return confirm('Are you sure you want to delete this ticket?');">
                <input type="hidden" name="ticketId" value="<%= ticket.id %>">
                <button type="submit" class="btn btn-outline-danger btn-sm w-100"><i class="fas fa-trash"></i> Delete Ticket</button>
              </form>
            </div>
          <% }); %>
        <% } %>
    </div>
    
    <div class="tab-pane fade" id="high">
        <% const highTickets = tickets.filter(t => t.priority === 'high'); %>
        <% if (highTickets.length === 0) { %>
          <p class="text-muted text-center py-4">No high priority tickets</p>
        <% } else { %>
          <% highTickets.forEach(ticket => { %>
            <div class="ticket-card">
              <div class="ticket-header">
                <div class="row align-items-center">
                  <div class="col-md-6">
                    <h5 class="mb-1"><%= ticket.subject %></h5>
                    <small class="text-muted">
                      <i class="fas fa-user me-2"></i><%= ticket.username %> (<%= ticket.email %>)
                    </small>
                  </div>
                  <div class="col-md-6 text-end">
                    <span class="badge <%= ticket.status === 'resolved' ? 'bg-success' : (ticket.status === 'in-progress' ? 'bg-warning text-dark' : (ticket.status === 'closed' ? 'bg-secondary' : 'bg-primary')) %> me-2">
                      <%= ticket.status %>
                    </span>
                    <span class="badge <%= ticket.priority === 'high' ? 'bg-danger' : (ticket.priority === 'medium' ? 'bg-warning text-dark' : 'bg-info') %>">
                      <%= ticket.priority %> priority
                    </span>
                    <div class="mt-2">
                      <small class="text-muted">
                        <i class="fas fa-clock me-1"></i><%= new Date(ticket.created_at).toLocaleString() %>
                      </small>
                    </div>
                  </div>
                </div>
              </div>
              <div class="mb-3">
                <strong style="color: #ffd700;">Message:</strong>
                <p class="mt-2 mb-0" style="color: #ffffff;"><%= ticket.message %></p>
              </div>
              <% if (ticket.admin_response) { %>
                <div class="alert alert-info mb-3">
                  <strong><i class="fas fa-reply"></i> Your Response:</strong>
                  <p class="mb-0 mt-2"><%= ticket.admin_response %></p>
                </div>
              <% } %>
              <form action="/admin/support/respond" method="POST" class="mb-2">
                <input type="hidden" name="ticketId" value="<%= ticket.id %>">
                <div class="row g-2">
                  <div class="col-md-6">
                    <textarea class="form-control" name="response" rows="2" placeholder="Type your response..." <%= ticket.status === 'closed' ? 'disabled' : '' %>></textarea>
                  </div>
                  <div class="col-md-3">
                    <select class="form-select" name="status" <%= ticket.status === 'closed' ? 'disabled' : '' %>>
                      <option value="open" <%= ticket.status === 'open' ? 'selected' : '' %>>Open</option>
                      <option value="in-progress" <%= ticket.status === 'in-progress' ? 'selected' : '' %>>In Progress</option>
                      <option value="resolved" <%= ticket.status === 'resolved' ? 'selected' : '' %>>Resolved</option>
                      <option value="closed" <%= ticket.status === 'closed' ? 'selected' : '' %>>Closed</option>
                    </select>
                  </div>
                  <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100" <%= ticket.status === 'closed' ? 'disabled' : '' %>>
                      <i class="fas fa-paper-plane"></i> Update
                    </button>
                  </div>
                </div>
              </form>
              <form action="/support/delete" method="POST" class="mt-2" onsubmit="return confirm('Are you sure you want to delete this ticket?');">
                <input type="hidden" name="ticketId" value="<%= ticket.id %>">
                <button type="submit" class="btn btn-outline-danger btn-sm w-100"><i class="fas fa-trash"></i> Delete Ticket</button>
              </form>
            </div>
          <% }); %>
        <% } %>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
